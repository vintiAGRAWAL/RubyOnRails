
<h1>List Friends</h1>
<% if user_signed_in?%>

  <table class="table table-striped table-bordered table-hover" >
    <thead class="thead-dark">
      <tr>
        <th>Name</th>
        <th>Email</th>
        <th>Phone no</th>
        <th>Description</th>
        <th>User Id</th>
        <th colspan="3"></th>
      </tr>
    </thead>


    <tbody>
    <%# <div id="friends"> %>
    
      <% @friends.each do |friend| %>
      <% if friend.user == current_user%>
        <tr>
          <td><%=friend.First_name%> <%=friend.Last_name%></td>
          
          <td><%=friend.Email%></td>
          <td><%=friend.Phone_no%></td>
          <td><%=friend.Description%></td>
          <td><%=friend.user_id%></td>
          <td>
            <%= link_to "Show this friend", friend,class:"btn btn-info" %>
          </td>
        
      



        </tr>
        <%end%>
      
    <%end%> 
        
    <%# </div> %>
    </tbody>

  </table>
<% else %>
  <p>  Hello Welcome to friends! </p>

<%end%>






