<p style="color: green"><%= notice %></p>

<h1>List Friends</h1>

<table class="table table-striped table-bordered table-hover" >
  <thead class="thead-dark">
    <tr>
      <th>First Name</th>
      <th>Last Name</th>
      <th>Email</th>
      <th>Phone no</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>


  <tbody>
  <%# <div id="friends"> %>
    <% @friends.each do |friend| %>
    <tr>
      <td><%=friend.First_name%></td>
      <td><%=friend.Last_name%></td>
      <td><%=friend.Email%></td>
      <td><%=friend.Phone_no%></td>
      <td><%=friend.Description%></td>
      <td>
        <%= link_to "Show this friend", friend,class:"btn btn-info" %>
      </td>



    </tr>
    
  <%end%> 
      
  <%# </div> %>
  </tbody>

</table>




<%= link_to "New friend", new_friend_path,class:"btn btn-primary" %>

